# Production Configuration
# Copy this to .env and update with your production values

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=CHANGE-THIS-TO-RANDOM-SECRET-KEY-IN-PRODUCTION

# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=tugas_production

# JWT
JWT_SECRET_KEY=CHANGE-THIS-JWT-SECRET-KEY
JWT_REFRESH_SECRET_KEY=CHANGE-THIS-JWT-REFRESH-SECRET
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# File Upload
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880

# Face Recognition
FACE_DATABASE_PATH=../src/database/face_database.pkl
FACE_CONFIDENCE_THRESHOLD=0.6
MIN_FACE_SIZE=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Server
HOST=0.0.0.0
PORT=5000
WORKERS=4
